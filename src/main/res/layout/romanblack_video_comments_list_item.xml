<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#41464b"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="10dp">
            
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                
        <ImageView android:id="@+id/romanblack_video_comments_list_item_thumb"
                   android:layout_height="25dp"
                   android:layout_width="25dp"
                   android:padding="1dp"
                   android:background="#676b6f"/>
                
        <LinearLayout android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp">
                    
            <TextView android:id="@+id/romanblack_video_comments_list_item_author"
                      android:layout_height="wrap_content"
                      android:maxHeight="30dp"
                      android:layout_width="fill_parent"
                      android:singleLine="true"
                      android:textColor="#ffbe6a"
                      android:textStyle="bold"
                      android:textSize="11dp"
                      android:layout_marginBottom="10dp"/>
                    
            <TextView android:id="@+id/romanblack_video_comments_list_item_text"
                      android:layout_height="wrap_content"
                      android:maxHeight="30dp"
                      android:layout_width="fill_parent"
                      android:textColor="#cccccc"
                      android:textSize="11dp"
                      android:layout_marginBottom="10dp"/>
                    
            <TextView android:id="@+id/romanblack_video_comments_list_item_date"
                      android:layout_height="wrap_content"
                      android:maxHeight="30dp"
                      android:layout_width="fill_parent"
                      android:singleLine="true"
                      android:textColor="#cccccc"
                      android:textSize="11dp"/>
            
        </LinearLayout>
        
        <LinearLayout android:id="@+id/romanblack_video_comments_list_item_comments_count_layput"
                      android:layout_height="30dp"
                      android:layout_width="31dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:background="@drawable/romanblack_video_comments_bubble"
                      android:layout_marginLeft="15dp"
                      android:paddingBottom="5dp">
                    
            <TextView android:id="@+id/romanblack_video_comments_list_item_comments_count"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textColor="#ffffff"
                      android:text="+"/>
            
        </LinearLayout>
        
    </LinearLayout>
            
</LinearLayout>
