<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="127dp"
              android:background="#41464b"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:paddingRight="10dp"
              android:paddingLeft="15dp">
            
    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="70dp"
                  android:orientation="horizontal"
                  android:layout_marginBottom="10dp">
        
        <FrameLayout android:layout_height="70dp"
                     android:layout_width="100dp"> 
                   
            <ImageView android:id="@+id/romanblack_video_listview_item_thumb"
                       android:layout_height="70dp"
                       android:layout_width="100dp"
                       android:padding="1dp"
                       android:background="#676b6f"/>
            
            <LinearLayout android:layout_height="70dp"
                          android:layout_width="100dp"
                          android:orientation="vertical"
                          android:gravity="center">
                
                <ImageView android:layout_height="25dp"
                           android:layout_width="25dp"
                           android:src="@drawable/romanblack_video_track_icon"/>
                
            </LinearLayout>
        
        </FrameLayout>
                
        <LinearLayout
                    android:id="@+id/video_listview_bottom_layout"
                    android:layout_height="70dp"
                      android:layout_width="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp">
                    
            <TextView android:id="@+id/romanblack_video_listview_item_title"
                      android:layout_height="wrap_content"
                      android:maxHeight="30dp"
                      android:layout_width="fill_parent"
                      android:singleLine="true"
                      android:textColor="#ffffff"
                      android:textStyle="bold"
                      android:textSize="12dp"
                      android:layout_marginBottom="10dp"/>
                    
            <TextView android:id="@+id/romanblack_video_listview_item_description"
                      android:layout_height="wrap_content"
                      android:maxHeight="30dp"
                      android:layout_width="fill_parent"
                      android:maxLines="3"
                      android:textColor="#afb2b5"
                      android:textSize="11dp"/>
            
        </LinearLayout>
        
        <LinearLayout android:id="@+id/romanblack_video_listview_item_comments_count_layput"
                      android:layout_height="30dp"
                      android:layout_width="31dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:background="@drawable/romanblack_video_comments_bubble"
                      android:layout_marginLeft="15dp"
                      android:paddingBottom="5dp">
                    
            <TextView android:id="@+id/romanblack_video_listview_item_comments_count"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textColor="#ffffff"
                      android:text="+"/>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout android:layout_height="27dp"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal">
                
        <LinearLayout android:id="@+id/romanblack_video_listview_item_share_btn"
                      android:layout_height="27dp"
                      android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginRight="35dp"
                      android:paddingBottom="2dp"
                      android:paddingLeft="8dp"
                      android:background="@drawable/romanblack_video_green_btn"
                      android:gravity="center_vertical" android:paddingRight="8dp">
                    
            <ImageView android:layout_height="14dp"
                       android:layout_width="9dp"
                       android:src="@drawable/romanblack_video_share_icon"
                       android:id="@+id/romanblack_video_list_share_image"/>
                    
            <TextView android:id="@+id/romanblack_video_list_share_caption"
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:text="@string/romanblack_video_list_share"
                      android:textColor="#ffffff"
                      android:gravity="center_vertical"
                      android:textStyle="bold"
                      android:layout_marginLeft="5dp"/>
            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/video_listview_item_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout android:id="@+id/romanblack_video_listview_item_like_btn"
                      android:layout_height="27dp"
                      android:layout_width="75dp"
                      android:orientation="horizontal"
                      android:layout_marginRight="1dp"
                      android:paddingBottom="2dp"
                      android:paddingLeft="5dp"
                      android:background="@drawable/romanblack_video_like_button"
                      android:gravity="center_vertical"
                      android:visibility="visible">
                    
            <ImageView android:layout_height="20dp"
                       android:layout_width="21dp"
                       android:src="@drawable/romanblack_video_hand"
                       android:id="@+id/romanblack_video_list_like_image"/>
                    
            <TextView android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:text="@string/romanblack_video_list_like"
                      android:textColor="#ffffff"
                      android:gravity="center_vertical"
                      android:textStyle="bold"
                      android:layout_marginLeft="5dp"
                      android:id="@+id/romanblack_video_list_like_caption"/>
            
        </LinearLayout>
        
        <LinearLayout android:layout_height="27dp"
                      android:layout_width="wrap_content"
                      android:minWidth="45dp"
                      android:orientation="horizontal"
                      android:paddingBottom="2dp"
                      android:background="@drawable/romanblack_video_likes_count_bg"
                      android:gravity="center"
                      android:paddingLeft="10dp"
                      android:paddingRight="5dp"
                      android:visibility="visible">
                    
            <TextView android:id="@+id/romanblack_video_listview_item_likes_count"
                      android:layout_height="wrap_content"
                      android:layout_width="wrap_content"
                      android:textColor="#ffffff"
                      android:text="+"/>
            
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
            
</LinearLayout>
