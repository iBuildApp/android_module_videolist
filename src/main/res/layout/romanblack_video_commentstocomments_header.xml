<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:id="@+id/romanblack_video_comments_root">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/romanblack_video_comments_corner"
                  android:paddingTop="10dp"
                  android:paddingRight="10dp"
                  android:paddingLeft="15dp"
                  android:paddingBottom="12dp">
            
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="70dp"
                      android:orientation="horizontal">
                
            <ImageView android:id="@+id/romanblack_video_commentstocomment_listview_header_thumb"
                       android:layout_height="50dp"
                       android:layout_width="50dp"
                       android:padding="1dp"
                       android:background="#676b6f"/>
                
            <LinearLayout android:layout_height="70dp"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical"
                          android:paddingLeft="10dp">
                    
                <TextView android:id="@+id/romanblack_video_commentstocomment_listview_header_name"
                          android:layout_height="wrap_content"
                          android:maxHeight="30dp"
                          android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:singleLine="true"
                          android:textColor="#ffffff"
                          android:textStyle="bold"
                          android:textSize="12dp"
                          android:layout_marginBottom="10dp"/>
                    
                <TextView android:id="@+id/romanblack_video_commentstocomment_listview_header_text"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:textColor="#afb2b5"
                          android:textSize="12dp"
                          android:layout_marginBottom="10dp"/>
                       
                <TextView android:id="@+id/romanblack_video_commentstocomment_listview_header_date"
                          android:layout_height="wrap_content"
                          android:maxHeight="30dp"
                          android:layout_width="wrap_content"
                          android:singleLine="true"
                          android:textColor="#afb2b5"
                          android:textSize="12dp"/>
            
            </LinearLayout>
        
        </LinearLayout>
            
    </LinearLayout>

</LinearLayout>