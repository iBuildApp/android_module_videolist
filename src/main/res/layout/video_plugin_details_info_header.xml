<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/video_plugin_details_info_header_resize_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/video_plugin_details_info_header_resize_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/video_plugin_expand"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/video_plugin_details_info_header_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/video_plugin_details_info_header_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:alpha="0.7"/>

        <LinearLayout
            android:id="@+id/video_plugin_details_info_header_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="15dp">

            <LinearLayout android:id="@+id/video_plugin_details_info_header_like_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="40dp"
                android:alpha="0.6">

                <ImageView
                    android:id="@+id/video_plugin_details_info_header_like_image"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:src="@drawable/video_plugin_like"
                    android:layout_marginRight="8dp" />

                <TextView android:id="@+id/video_plugin_details_info_header_like_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/video_plugin_details_info_header_share_layout"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:alpha="0.6">

                <ImageView
                    android:id="@+id/video_plugin_details_info_header_share_image"
                    android:layout_height="20dp"
                    android:layout_width="20dp"
                    android:src="@drawable/video_list_share"
                    android:layout_marginRight="8dp"/>

                <TextView android:id="@+id/video_plugin_details_info_header_share_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/video_plugin_main_list_share"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/video_plugin_details_info_header_top_separator"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/video_plugin_details_info_header_comments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/video_plugin_comments"
                android:textSize="18sp"
                android:alpha="0.7"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/video_plugin_details_info_header_bottom_separator"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/video_plugin_details_info_item_no_comments_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_plugin_details_info_item_no_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_plugin_no_comments"
            android:textSize="18sp"/>

    </LinearLayout>
</LinearLayout>