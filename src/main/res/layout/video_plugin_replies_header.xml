<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">

            <com.ibuildapp.romanblack.VideoPlugin.view.CircularImageView
                android:id="@+id/video_plugin_replies_header_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginRight="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/video_plugin_replies_header_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/video_plugin_replies_header_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha="0.5"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/video_plugin_replies_header_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:alpha="0.7"
            android:textSize="19sp"
            android:layout_marginLeft="15dp"/>

        <View
            android:id="@+id/video_plugin_replies_header_top_separator"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/video_plugin_replies_header_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"/>

        <View
            android:id="@+id/video_plugin_replies_header_bottom_separator"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <LinearLayout
            android:id="@+id/video_plugin_replies_header_no_comments_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_plugin_replies_header_no_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_plugin_no_comments"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>